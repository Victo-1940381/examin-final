{
    "openapi": "3.1.0",
    "info":{
        "title": "Examen Final",
        "summary": "cet API permet de faire la gestion de taches, de sous-taches et d'utilisateurs",
        "description":" cet API permet d'ajouter,de supprimer et de modifier une tache et une sous-tache. elle permet aussi d'afficher une liste de taches de la base de donnée. elle permet de créer un utilisateur et de generer une cle d'api",
        "version": "1.0.0"
    },
    "servers":[
        {
            "url": "http://localhost:3000/",
            "description":"Serveur de Développement"
        },
        {
            "url": "https://examin-final.onrender.com",
            "description":"Serveur en ligne"
        }
    ],
    "paths":{
        "/ListeTache/{id}": {
            "get": {
                "summary":"Afficher une liste de taches",
                "tags":["tache"],
                "description":"afficher une liste de taches en fonction de l'id de l'utilisateur",
                "parameters":[
                    {
                        "in":"path",
                        "name":"id",
                        "description":"Id de l'utilisateur",
                        "required":true,
                        "schema":{
                            "type": "integer",
                            "format":"int32",
                            "exemple": "1"
                        }
                    }
                ],
                "responses":{
                    "200":{
                       "description": "liste retrouver avec succes",
                       "content":{
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "titre":{
                                        "type":"string",
                                        "exemple":"Développement de l'API"
                                    },
                                    "description":{
                                        "type":"string",
                                        "exemple":"creation et developpement  de l'API"
                                    }
                                }
                            }
                        }
                       } 
                    },
                    "400":{
                        "description":"Erreur de paramètres manquants ou invalides",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "message":{
                                            "type":"string",
                                            "exemple":"L'id de l'utilisateur est obligatoire et doit être supérieur à 0"
                                        }
                                    }
                                }
                            }
                        }

                    },
                    "404":{
                        "description":"aucunes valeurs trouver dans la base de donnée",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "message":{
                                            "type":"string",
                                            "exemple":"taches introuvable avec l'id utilisateur 1"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"erreur serveur",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "message":{
                                            "type":"string",
                                            "exemple":"Erreur lors de la récupération des taches avec l'id utilisateur 1"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/DetailTache/{id}":{
           "get":{
            "summary": "afficher les details d'une tache",
            "tags":["tache"],
            "description":"afficher les details d'une tache avec toutes ses sous-taches en fonction de son id",
            "parameters":[
                {
                    "in":"path",
                    "name":"id",
                    "description":"Id de la tache",
                    "required":true,
                    "schema":{
                        "type":"integer",
                        "format":"int32",
                        "exemple":"1"
                  }
                }
            ],
            "responses":{
                "200":{
                    "description":"details de la tache retrouvée avec succes",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "Tache":{
                                        "type":"array",
                                        "items":{
                                            "type":"object",
                                            "properties":{
                                                "titre":{
                                                    "type":"string",
                                                    "exemple":"Développement de l'API"
                                                },
                                                "description":{
                                                    "type":"string",
                                                    "exemple":"creation et developpement  de l'API"
                                                },
                                                "date_debut": {
                                                    "type": "string",
                                                    "exemple":"2000-06-13T04:00:00.000Z"
                                                },
                                                "date_echeance":{
                                                    "type":"string",
                                                    "exemple":"2030-06-13T04:00:00.000Z"
                                                },
                                                "complete":{
                                                    "type":"boolean",
                                                    "exemple": false
                                                }
                                            }
                                        }
                                    },
                                    "Sous-Tache":{
                                        "type":"array",
                                        "items":{
                                            "type":"object",
                                            "properties":{
                                                "titre":{
                                                    "type":"string",
                                                    "exemple":"créer les models"
                                                },
                                                "complete":{
                                                    "type":"boolean",
                                                    "exemple":false
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "400":{
                    "description":"Erreur de paramètres manquants ou invalides",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "message":{
                                        "type":"string",
                                        "exemple":"L'id de la tache est obligatoire et doit être supérieur à 0"
                                    }
                                }
                            }
                        }
                    }
                },
                "404":{
                    "description":"aucunes valeurs trouver dans la base de donnée",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "message":{
                                        "type":"string",
                                        "exemple":"tache introuvable avec l'id  1"
                                    }
                                }
                            }
                        }
                    }
                },
                "500":{
                    "description": "erreur serveur",
                    "content": {
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "message":{
                                        "type":"string",
                                        "exemple":"Erreur lors de la récupération des detail de la tache avec l'id 1"
                                    }
                                }
                            }
                        }
                    }
                }
            }
           } 
        },
        "/Tache":{
            "post":{
                "summary":"Ajouter une tache",
                "tags":["Tache"],
                "description": "Ajouter une tache en fournissant un id d'utilisateur, un titre, une description, une date de debut, une date d'echeance et un status de la tache",
                "requestBody":{
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "utilisateur_id":{
                                        "type": "integer",
                                        "format":"int32",
                                        "exemple": 1
                                    },
                                    "titre":{
                                        "type":"string",
                                        "exemple":"Développement de l'API"
                                    },
                                    "description":{
                                        "type":"string",
                                        "exemple":"creation et developpement  de l'API"
                                    },
                                    "date_debut":{
                                        "type":"string",
                                        "exemple":"2000-06-14"
                                    },
                                    "date_echeance":{
                                        "type":"string",
                                        "exemple":"2007-06-14"
                                    },
                                    "complete":{
                                        "type":"boolean",
                                        "exemple":"true"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Tache ajoutée avec succès",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "message":{
                                            "type":"string",
                                            "exemple":"la tache [Développement de l'API] a été ajouter avec succes"
                                        },
                                        "tache":{
                                            "type":"object",
                                            "properties":{
                                                "utilisateur_id":{
                                                    "type": "integer",
                                                    "format":"int32",
                                                    "exemple": 1
                                                },
                                                "titre":{
                                                    "type":"string",
                                                    "exemple":"Développement de l'API"
                                                },
                                                "description":{
                                                    "type":"string",
                                                    "exemple":"creation et developpement  de l'API"
                                                },
                                                "date_debut":{
                                                    "type":"string",
                                                    "exemple":"2000-06-14"
                                                },
                                                "date_echeance":{
                                                    "type":"string",
                                                    "exemple":"2007-06-14"
                                                },
                                                "complete":{
                                                    "type":"boolean",
                                                    "exemple":"true"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        
                    }
                }
            }
        }
    }
   
}